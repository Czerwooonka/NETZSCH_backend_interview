<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.wt.WalkieTalkieController">
    <children>
        <Label text="Message" />
        <TextArea fx:id="inputField" />
        <Button fx:id="secondaryButton" text="Send message" onAction="#switchToPrimary" />
        <Label text="Response" />
        <TextArea editable="false" mouseTransparent="true" focusTraversable="false" fx:id="outputField" text="Elo Makrelo"/>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
